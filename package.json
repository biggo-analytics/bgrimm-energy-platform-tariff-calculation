{
  "name": "koa-electricity-bill-api",
  "version": "1.0.0",
  "description": "Koa.js backend API for electricity bill calculations",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "koa",
    "electricity",
    "bill",
    "calculation",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.14.2",
    "@koa/router": "^12.0.0",
    "koa-bodyparser": "^4.4.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
